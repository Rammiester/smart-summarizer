{
    "manifest_version": 3,
    "name": "Smart Summarizer",
    "version": "1.0",
    "description": "A Chrome extension that summarizes web pages using AI.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    }
}